
@{
    ViewBag.Title = "isEmail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true){
<h1>Kiểm tra Tính đúng đắn của 1 địa chỉ email truyền vào.</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-6 col-xs-12">
                <form>
                    <div class="form-group">
                        <label class="control-label" for="email"> Nhập email </label>
                        <input class="form-control"
                               id="email"
                               name="email"
                               type="text" />
                    </div>
                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary" name="submit" type="submit">
                                Kiểm tra
                            </button>
                        </div>
                        <center>
                            <span class="text-danger">@ViewBag.ErrorisEmail</span>
                            <span>@ViewBag.isEmail</span>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    }
}



