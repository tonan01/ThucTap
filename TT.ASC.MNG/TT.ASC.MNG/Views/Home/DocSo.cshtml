
@{
    ViewBag.Title = "DocSo";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true){
    }
    <h1>Đọc dãy số bất kỳ</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-6 col-xs-12">
            <form>
                <div class="form-group">
                    <label class="control-label" for="DaySo"> Nhập số </label>
                    <input class="form-control"
                           id="DaySo"
                           name="DaySo"
                           type="number" />
                </div>
                <div class="form-group">
                    <div>
                        <button class="btn btn-primary" name="submit" type="submit">
                            Đọc số
                        </button>
                    </div>
                    <center>
                        <span class="text-danger">@ViewBag.ErrorDaySo</span>
                        <span>@ViewBag.DaySo</span>
                    </center>
                </div>
            </form>
        </div>
    </div>
}

