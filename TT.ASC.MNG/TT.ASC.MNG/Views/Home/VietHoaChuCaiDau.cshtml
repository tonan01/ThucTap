
@{
    ViewBag.Title = "VietHoaChuCaiDau";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true){
<h1>Viết hàm xử lý viết hoa đầu mỗi ký tự đâu tiên theo tên được truyền vào.</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-6 col-xs-12">
                <form>
                    <div class="form-group">
                        <label class="control-label" for="Chuoi"> Nhập họ và tên </label>
                        <input class="form-control"
                               id="Chuoi"
                               name="Chuoi"
                               type="text" />
                    </div>
                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary" name="submit" type="submit">
                                Viết Hoa
                            </button>
                        </div>
                        <center>
                            <span class="text-danger">@ViewBag.ErrorVietHoaChuCaiDau</span>
                            <span>@ViewBag.VietHoaChuCaiDau</span>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    }
}


