
@{
    ViewBag.Title = "NgayDauTienCuaTuan";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true){

<h1>Viết hàm để trả về ngày đầu tuần </h1>
        <div class="row">

            <div class="col-md-6 offset-md-3 col-sm-6 col-xs-12">
                <form >
                    <div class="form-group">
                        <label for="dateTime">Lịch:</label>
                        <input class="form-control"
                               type="datetime-local"
                               id="dateTime"
                               name="dateTime" />
                    </div>
                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary " name="submit" type="submit">
                                Tìm Ngày
                            </button>
                        </div>
                        <center>
                            <span class="text-danger">@ViewBag.ErrorNgayDauTienCuaTuan</span>
                            <span>@ViewBag.NgayDauTienCuaTuan</span>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    }
}

