
@{
    ViewBag.Title = "RanDomHoDemTen";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true){
<h1>Viết hàm random họ tên theo danh sách 3 mảng các từ có sẵn (Họ, Đệm, Tên)</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-6 col-xs-12">
                <form>
                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary" name="submit" type="submit">
                                RanDom
                            </button>
                        </div>
                        <center>
                            <span class="text-danger">@ViewBag.ErrorRanDomHoDemTen</span>
                            <span>@ViewBag.RanDomHoDemTen</span>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    }
}


